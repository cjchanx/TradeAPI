@page
@using Webservice.ContextHelpers
@model TradingDB.Pages.AdminEditSecurityModel
@inject DatabaseContextHelper context
@{
}

<div class="container border" style="padding:20px">
    <form method="post">
        <div class="text-danger" asp-validation-summary="ModelOnly"></div>


        <div class="form-group row">
            <div class="col-2">
                <label asp-for="UpdateSecurity.Description"></label>
            </div>
            <div class="col-5">
                <input type="text" asp-for="UpdateSecurity.Description" class="form-control" />
            </div>
            <span class="text-danger" asp-validation-for="UpdateSecurity.Description"></span>
        </div>


        <div class="form-group row">
            <div class="col-2">
                <label asp-for="UpdateSecurity.Price"></label>
            </div>
            <div class="col-5">
                <input type="text" asp-for="UpdateSecurity.Price" class="form-control" />
            </div>
            <span class="text-danger" asp-validation-for="UpdateSecurity.Price"></span>
        </div>

        <div class="form-group row">
            <div class="col-2">
                <input type="submit" class="btn btn-primary" value="Update"/>
            </div>
        </div>
        <input type="hidden" asp-for="UpdateSecurity.Symbol" class="form-control" />
    </form>
</div>
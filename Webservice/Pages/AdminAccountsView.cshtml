@page
@using Webservice.ContextHelpers
@using DatabaseLibrary.Helpers
@inject DatabaseContextHelper context
@model TradingLibrary.Models.Accounts
@{
}

    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container">
                <a class="navbar-brand" asp-area="" asp-page="/Home">TradingDB</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-page="/AdminAccountsView">Accounts</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-page="/AdminBrokerView">Brokers</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-page="/AdminSecurityPage">Securities</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>

<h2>Accounts</h2>
<p>
    <a asp-page="/AdminCreateAccounts">Create New Account</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                <a >@Html.DisplayNameFor(model => model.Id)</a>
            </th>
            <th>
                <a >@Html.DisplayNameFor(model => model.Active)</a>
            </th>
            <th>
                <a >@Html.DisplayNameFor(model => model.Name)</a>
            </th>
            <th>
                <a >@Html.DisplayNameFor(model => model.Broker)</a>
            </th>
            <th>
                <a >@Html.DisplayNameFor(model => model.Date)</a>
            </th>
            <th>
                <a >@Html.DisplayNameFor(model => model.Description)</a>
            </th>
            @foreach (var item in AccountsHelper_db.getCollection(context.DBContext))
            {
                <tr>
                    <td>@item.Id</td>
                    <td>@item.Active</td>
                    <td>@item.Name</td>
                    <td>@item.Broker</td>
                    <td>@item.Date</td>
                    <td>@item.Description</td>
                    <td>
                        <a asp-page="/AdminEditAccounts" asp-route-id="@item.Id">Manage</a>
                        <a type="submit" asp-action="Delete"  asp-controller="AdminAccountsViewModel" asp-route-id="@item.Id" >Delete</a>
                    </tr>
            }
        </tr>
    </thead>
    <tbody>
    </tbody>
</table>
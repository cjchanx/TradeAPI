@page
@using Webservice.ContextHelpers
@using DatabaseLibrary.Helpers
@inject DatabaseContextHelper context
@model TradingLibrary.Models.Accounts
@{
}

    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container">
                <a class="navbar-brand" asp-area="" asp-page="/Home">TradingDB</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
            </div>
        </nav>
    </header>

<h2>Accounts</h2>
<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                <a asp-action="Index" asp-route-sortOrder="@ViewData["NameSortParm"]">@Html.DisplayNameFor(model => model.Id)</a>
            </th>
            <th>
                <a asp-action="Index" asp-route-sortOrder="@ViewData["DateSortParm"]">@Html.DisplayNameFor(model => model.Date)</a>
            </th>
            @foreach (var item in AccountsHelper_db.getCollection(context.DBContext))
            {
                <tr>
                    <td>@item.Id</td>
                    <td>@item.Active</td>
                    <td>@item.Name</td>
                    <td>@item.Broker</td>
                    <td>@item.Date</td>
                    <td>@item.Description</td>
                </tr>
            }
        </tr>
    </thead>
    <tbody>
    </tbody>
</table>
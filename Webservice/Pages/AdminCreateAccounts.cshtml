@page
@model TradingDB.Pages.AdminCreateAccountsModel
@{
}


<div class="container border" style="padding:20px">
    <form method="post">
        <div class="text-danger" asp-validation-summary="ModelOnly"></div>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="CreateAccount.Broker"></label>
            </div>
            <div class="col-5">
                <input type="text" asp-for="CreateAccount.Broker" class="form-control" />
            </div>
            <span class="text-danger" asp-validation-for="CreateAccount.Broker"></span>
        </div>

        <div class="form-group row">
            <div class="col-2">
                <label asp-for="CreateAccount.Name"></label>
            </div>
            <div class="col-5">
                <input type="text" asp-for="CreateAccount.Name" class="form-control" />
            </div>
            <span class="text-danger" asp-validation-for="CreateAccount.Name"></span>
        </div>

        <div class="form-group row">
            <div class="col-2">
                <label asp-for="CreateAccount.Description"></label>
            </div>
            <div class="col-5">
                <input type="text" asp-for="CreateAccount.Description" class="form-control" />
            </div>
            <span class="text-danger" asp-validation-for="CreateAccount.Description"></span>
        </div>


        <div class="form-group row">
            <div class="col-2">
                <input type="submit" class="btn btn-primary" value="Create"/>
            </div>
        </div>
    </form>
</div>
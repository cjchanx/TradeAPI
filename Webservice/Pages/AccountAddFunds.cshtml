@page
@using Webservice.ContextHelpers
@model TradingDB.Pages.AccountAddFundsModel
@inject DatabaseContextHelper context
@{
}


<div class="container border" style="padding:20px">
    <form method="post">
        <div class="text-danger" asp-validation-summary="ModelOnly"></div>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="AddFunds.Amount"></label>
            </div>
            <div class="col-5">
                <input type="text" asp-for="AddFunds.Amount" class="form-control" />
            </div>
            <span class="text-danger" asp-validation-for="AddFunds.Amount"></span>
        </div>

        <div class="form-group row">
            <div class="col-5">
                <input type="submit" asp-page-handler="Add" class="btn btn-primary" value="Add"/>
                <input type="submit" asp-page-handler="Withdraw" class="btn btn-primary" value="Withdraw"/>
                </div>
        </div>
    </form>
</div>